{
  "name": "design-system",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/design-system/src",
  "projectType": "library",
  "tags": [],
  "generators": {
    "@nxext/stencil:component": {
      "style": "scss"
    }
  },
  "targets": {
    "test": {
      "executor": "@nxext/stencil:test",
      "outputs": ["{options.outputPath}"],
      "options": {
        "projectType": "library",
        "tsConfig": "libs/design-system/tsconfig.lib.json",
        "configPath": "libs/design-system/stencil.config.ts",
        "outputPath": "dist/libs/design-system"
      }
    },
    "build": {
      "executor": "@nxext/stencil:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "projectType": "library",
        "tsConfig": "libs/design-system/tsconfig.lib.json",
        "configPath": "libs/design-system/stencil.config.ts",
        "outputPath": "dist/libs/design-system"
      },
      "configurations": {
        "production": {
          "dev": false,
          "prod": true
        }
      }
    },
    "serve": {
      "executor": "@nxext/stencil:serve",
      "outputs": ["{options.outputPath}"],
      "options": {
        "projectType": "library",
        "tsConfig": "libs/design-system/tsconfig.lib.json",
        "configPath": "libs/design-system/stencil.config.ts",
        "outputPath": "dist/libs/design-system"
      }
    },
    "e2e": {
      "executor": "@nxext/stencil:e2e",
      "outputs": ["{options.outputPath}"],
      "options": {
        "projectType": "library",
        "tsConfig": "libs/design-system/tsconfig.lib.json",
        "configPath": "libs/design-system/stencil.config.ts",
        "outputPath": "dist/libs/design-system"
      }
    },
    "lint": {
      "executor": "@nx/eslint:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": "libs/design-system/**/*.{ts,tsx}"
      }
    }
  }
}
